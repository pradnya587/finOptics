<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#111A2C"/>
            <stroke
                android:width="2dp"
                android:color="#22D3A6"/>
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#111A2C"/>
            <stroke
                android:width="1dp"
                android:color="#1F2A44"/>
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>

</selector>
